<Window x:Class="GestionAprendisaje.RegistroWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Usuario" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Nombre:" />
            <TextBox x:Name="TxtNombre" Margin="0,5" />

            <Label Content="Correo Electrónico:" />
            <TextBox x:Name="TxtEmail" Margin="0,5" />

            <Label Content="Nombre de Usuario:" />
            <TextBox x:Name="TxtUsername" Margin="0,5" />

            <Label Content="Contraseña:" />
            <PasswordBox x:Name="TxtPassword" Margin="0,5" />

            <Button Content="Registrar" Click="BtnRegistrar_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
