<Window x:Class="GestionAprendisaje.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Iniciar Sesión" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Usuario:" />
            <TextBox x:Name="TxtUsername" Margin="0,5" />

            <Label Content="Contraseña:" />
            <PasswordBox x:Name="TxtPassword" Margin="0,5" />

            <Button Content="Iniciar Sesión" Click="BtnLogin_Click" Margin="0,10" />
            <Button Content="Registrar" Click="BtnRegistrar_Click" Margin="0,10" />
        </StackPanel>
    </Grid>
</Window>
